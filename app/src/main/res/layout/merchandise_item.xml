<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/merchandise_linearlayout"
    android:layout_height="120dp"
    android:layout_width="match_parent"
    android:background="#fefefe"
    android:layout_marginBottom="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/merchandise_image"
            android:layout_width="wrap_content"
            android:layout_height="106dp"
            android:padding="7dp"
            android:src="@drawable/apple_pic"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/merchandise_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/merchandise_image"
            android:layout_alignParentTop="true"
            style="@style/TextViewStyleName"/>

        <TextView
            android:id="@+id/merchandise_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/merchandise_image"
            android:layout_alignParentBottom="true"
            style="@style/TextViewStylePrice"/>

    </RelativeLayout>

</LinearLayout>


