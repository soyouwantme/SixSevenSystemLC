<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/merchandise_linearlayout"
    android:layout_height="120dp"
    android:layout_width="match_parent"
    android:background="#fefefe"
    android:layout_marginBottom="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/merchandise_image"
            android:layout_width="106dp"
            android:layout_height="106dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="7dp"
            android:background="@color/background"
            android:padding="7dp"
            android:scaleType="centerInside"
            android:src="@drawable/apple_pic"
            tools:srcCompat="@tools:sample/avatars[7]" />

        <TextView
            android:id="@+id/merchandise_name"
            style="@style/TextViewStyleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="7dp"
            android:paddingTop="7dp"
            android:layout_toRightOf="@+id/merchandise_image"
            tools:text="@tools:sample/cities" />

        <TextView
            android:id="@+id/merchandise_price"
            style="@style/TextViewStylePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="7dp"
            android:paddingBottom="7dp"
            android:layout_toRightOf="@+id/merchandise_image"
            tools:text="@tools:sample/cities" />

    </RelativeLayout>

</LinearLayout>


