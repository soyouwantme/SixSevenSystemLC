<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="TextViewStyleName">
        <item name="android:layout_margin">5sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextViewStylePrice">
        <item name="android:layout_margin">5sp</item>
        <item name="android:textColor">#f00</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
          
        <item name="android:button">@null</item>
        <item name="android:background">@xml/checkbox_selector</item>
    </style>

    <style name="ActivityTheme" parent="AppTheme">

    </style>

    <style name="ActivityTheme2">
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlNormal">#000</item>
    </style>

    <style name="Price">
        <item name="android:layout_margin">5sp</item>
        <item name="android:textColor">#f00</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="OrderChar">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">5sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="SellChar">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:textColor">@color/abovebackground</item>
    </style>

    <style name="SellNumber">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="SellChar1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/abovebackground</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="SellNumber1">
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
